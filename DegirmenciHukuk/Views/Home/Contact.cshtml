@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model MailModel

<style>
    .field-validation-error {
        color: red
    }

    .validation-summary-errors {
        color: red
    }

    .red {
        color: red;
    }
</style>

<div class="container-fluid">
    <div class="row d-md-flex">
        <div class="half d-flex justify-content-center align-items-center" id="contactBackGround" style="background-image: url(/images/dh_Logo.jpeg);">
            @*<div class="desc text-center">
                    <div class="icon"><span class="flaticon-auction"></span></div>
                    <h1><a href="index.html">Değirmenci <br><span>Hukuk Bürosu</span></a></h1>
                </div>*@
        </div>
        <div class="half p-3 p-md-5 ftco-animate">
            <h3 class="mb-4">İletişim</h3>
            <form method="post">
                @*<div asp-validation-summary="ModelOnly">
                        <span>Please correct the following errors</span>
                    </div>*@
                @if (ViewData["Error"] != null)
                {
                    <div class="portfolio-modal modal fade" id="familyModal" tabindex="-1" role="dialog" aria-hidden="true" *ngIf="project">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="close-modal" data-dismiss="modal">
                                    <div class="lr">
                                        <div class="rl"></div>
                                    </div>
                                </div>
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-12 mx-auto">
                                            <div class="modal-body">
                                                <div class="text-center">
                                                    @TempData["Error"].ToString()
                                                    <div asp-validation-summary="All" class="text-danger"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                @if (TempData["Success"] != null)
                {
                    <div class="portfolio-modal modal fade" id="familyModal" tabindex="-1" role="dialog" aria-hidden="true" *ngIf="project">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="close-modal" data-dismiss="modal">
                                    <div class="lr">
                                        <div class="rl"></div>
                                    </div>
                                </div>
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-12 mx-auto">
                                            <div class="modal-body">
                                                <div class="text-center">
                                                    @TempData["Success"].ToString()
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Ad Soyad" asp-for="FullName" id="FullName">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Email" data-val="true" data-val-email="Please enter a valid email" id="EmailAddress" name="EmailAddress" asp-for="EmailAddress">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Konu" asp-for="Subject">
                </div>
                <div class="form-group">
                    <textarea cols="30" rows="7" class="form-control" placeholder="Mesaj" asp-for="Body"></textarea>
                </div>
                <div class="form-group">
                    <div class="g-recaptcha" data-sitekey="@ViewData["ReCaptchaKey"]"></div>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Gönder" formaction="Home/Index">
                </div>
            </form>
        </div>
    </div>
</div>